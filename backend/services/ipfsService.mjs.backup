  /**
   * Upload a file to IPFS with automatic retry and chunking
   * @param {File|Buffer|string} file - The file to upload (File, Buffer, or file path)
   * @param {object} options - Upload options
   * @returns {Promise<object>} Upload result with file details
   */
  async uploadFile(file, options = {}) {
    try {
      const opts = { ...DEFAULT_UPLOAD_OPTIONS, ...options };
      
      // Convert file to Web3.Storage compatible format if needed
      let fileToUpload = file;
      let filename = options.filename || 'file';
      
      if (Buffer.isBuffer(file)) {
        fileToUpload = new File([file], filename, { type: options.contentType || 'application/octet-stream' });
      } else if (typeof file === 'string') {
        // Handle file path (simplified - in production, you'd want to use fs.readFile)
        const content = Buffer.from(file);
        fileToUpload = new File([content], filename, { 
          type: options.contentType || mime.lookup(filename) || 'application/octet-stream' 
        });
      }
      
      // Upload the file
      const cid = await this.storage.put([fileToUpload], {
        name: filename,
        maxRetries: opts.maxRetries,
        wrapWithDirectory: false,
        onStoredChunk: (bytes) => {
          if (typeof opts.onProgress === 'function') {
            opts.onProgress({ type: 'upload', loaded: bytes, total: fileToUpload.size });
          }
        }
      });
      
      // Get file info
      const fileInfo = await this.getFileInfo(cid);
      
      return {
        cid,
        size: fileToUpload.size,
        name: filename,
        type: fileToUpload.type,
        url: `https://${cid}.ipfs.w3s.link/${encodeURIComponent(filename)}`,
        ...fileInfo
      };
    } catch (error) {
      console.error('Error uploading file to IPFS:', error);
      throw new Error(`Failed to upload file: ${error.message}`);
    }
  }
  
  /**
