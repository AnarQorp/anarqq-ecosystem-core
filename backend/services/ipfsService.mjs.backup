   */
  async downloadFile(cid, options = {}) {
    try {
      const res = await this.storage.get(cid);
      if (!res.ok) {
        throw new Error(`Failed to get file with CID ${cid}: ${res.status} ${res.statusText}`);
      }
      
      // Get the file data
      const files = await res.files();
      if (!files || files.length === 0) {
        throw new Error(`No files found for CID ${cid}`);
      }
      
      const file = files[0];
      const arrayBuffer = await file.arrayBuffer();
      const buffer = Buffer.from(arrayBuffer);
      
      return {
        cid,
        name: file.name,
        type: file.type,
        size: file.size,
        data: buffer,
        lastModified: file.lastModified
      };
    } catch (error) {
      console.error(`Error downloading file ${cid}:`, error);
      throw new Error(`Failed to download file: ${error.message}`);
    }
  }
  
