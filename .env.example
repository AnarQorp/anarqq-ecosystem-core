# Example frontend environment variables for AnarQ Nexus
VITE_API_URL=http://localhost:3000/api
VITE_ENVIRONMENT=development

# Pi Network Testnet configuration
VITE_PI_TESTNET_RPC=https://api.testnet.minepi.com
VITE_PI_TESTNET_CHAIN_ID=12345
VITE_PI_TESTNET_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_PI_TESTNET_EXPLORER=https://explorer.testnet.minepi.com/tx/

# Production network configuration
VITE_PRODUCTION_RPC=https://polygon-rpc.com
VITE_PRODUCTION_CONTRACT_ADDRESS=

# IPFS Configuration
VITE_IPFS_GATEWAY_URL=https://ipfs.io/ipfs

# Storacha Configuration
VITE_STORACHA_API_KEY=your_storacha_api_key_here
VITE_STORACHA_API_URL=https://api.storacha.com/v1

# Backend Configuration (for server-side)
STORACHA_API_KEY=your_storacha_api_key_here
IPFS_REPO_PATH=./ipfs-repo

# Optional: Custom IPFS gateway for private networks
# VITE_IPFS_GATEWAY_URL=http://localhost:8080/ipfs

# Optional: Enable/disable IPFS features
VITE_ENABLE_IPFS=true

# Optional: Default space for the application
VITE_DEFAULT_SPACE_ID=your_default_space_id_here
