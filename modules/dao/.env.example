# DAO Module Environment Configuration

# Service Configuration
NODE_ENV=development
DAO_PORT=3014
DAO_HOST=0.0.0.0

# Mock Mode (set to true for standalone operation)
USE_MOCKS=true

# Database
DAO_DB_PATH=./storage/dao.db

# Security
JWT_SECRET=your-jwt-secret-change-in-production
SIGNATURE_VERIFICATION=true

# Integration URLs (for integrated mode)
SQUID_SERVICE_URL=http://localhost:3001
QONSENT_SERVICE_URL=http://localhost:3002
QLOCK_SERVICE_URL=http://localhost:3003
QINDEX_SERVICE_URL=http://localhost:3004
QERBEROS_SERVICE_URL=http://localhost:3005
QWALLET_SERVICE_URL=http://localhost:3006

# Event Bus
EVENT_BUS_URL=http://localhost:3007

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in ms
RATE_LIMIT_MAX=100

# Governance Defaults
DEFAULT_VOTING_DURATION=604800000  # 7 days in ms
DEFAULT_QUORUM=10
MIN_PROPOSAL_DURATION=3600000      # 1 hour in ms
MAX_PROPOSAL_DURATION=2592000000   # 30 days in ms

# Reputation System
REPUTATION_ENABLED=true
REPUTATION_DECAY_RATE=0.01  # 1% per day

# Logging
LOG_LEVEL=info
LOG_FORMAT=json