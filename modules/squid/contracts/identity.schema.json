{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.q-ecosystem.com/squid/identity.json",
  "title": "Identity Schema",
  "description": "Schema for sQuid identity objects",
  "type": "object",
  "required": [
    "did",
    "name",
    "type",
    "rootId",
    "status",
    "verificationLevel",
    "createdAt",
    "updatedAt"
  ],
  "properties": {
    "did": {
      "type": "string",
      "format": "uuid",
      "description": "Decentralized identifier for the identity"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Human-readable name for the identity"
    },
    "type": {
      "type": "string",
      "enum": ["ROOT", "DAO", "ENTERPRISE", "CONSENTIDA", "AID"],
      "description": "Type of identity"
    },
    "parentId": {
      "type": "string",
      "format": "uuid",
      "description": "Parent identity DID (for subidentities)"
    },
    "rootId": {
      "type": "string",
      "format": "uuid",
      "description": "Root identity DID"
    },
    "children": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "description": "Child identity DIDs"
    },
    "depth": {
      "type": "integer",
      "minimum": 0,
      "description": "Depth in identity hierarchy"
    },
    "path": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "description": "Path from root to this identity"
    },
    "status": {
      "type": "string",
      "enum": ["ACTIVE", "INACTIVE", "SUSPENDED", "DELETED", "PENDING_VERIFICATION"],
      "description": "Current status of the identity"
    },
    "verificationLevel": {
      "type": "string",
      "enum": ["UNVERIFIED", "BASIC", "ENHANCED", "INSTITUTIONAL"],
      "description": "KYC verification level"
    },
    "reputation": {
      "type": "number",
      "minimum": 0,
      "maximum": 1000,
      "description": "Reputation score"
    },
    "governanceType": {
      "type": "string",
      "enum": ["SELF", "DAO", "PARENT", "AUTONOMOUS"],
      "description": "Governance model for this identity"
    },
    "privacyLevel": {
      "type": "string",
      "enum": ["PUBLIC", "DAO_ONLY", "PRIVATE", "ANONYMOUS"],
      "description": "Privacy level setting"
    },
    "publicKey": {
      "type": "string",
      "description": "Public key for cryptographic operations"
    },
    "qonsentProfileId": {
      "type": "string",
      "format": "uuid",
      "description": "Associated Qonsent profile ID"
    },
    "qindexRegistered": {
      "type": "boolean",
      "description": "Whether identity is registered in Qindex"
    },
    "kyc": {
      "type": "object",
      "properties": {
        "required": {
          "type": "boolean"
        },
        "submitted": {
          "type": "boolean"
        },
        "approved": {
          "type": "boolean"
        },
        "level": {
          "type": "string",
          "enum": ["BASIC", "ENHANCED", "INSTITUTIONAL"]
        },
        "submittedAt": {
          "type": "string",
          "format": "date-time"
        },
        "approvedAt": {
          "type": "string",
          "format": "date-time"
        },
        "documents": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "IPFS hashes of KYC documents"
        }
      },
      "required": ["required", "submitted", "approved"]
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "lastUsed": {
      "type": "string",
      "format": "date-time",
      "description": "Last usage timestamp"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional metadata"
    }
  },
  "additionalProperties": false
}