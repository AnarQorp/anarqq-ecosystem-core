{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.q-ecosystem.com/squid/create-subidentity-request.json",
  "title": "Create Subidentity Request Schema",
  "description": "Schema for subidentity creation requests",
  "type": "object",
  "required": ["name", "type"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^[a-zA-Z0-9\\s\\-_\\.]+$",
      "description": "Human-readable name for the subidentity"
    },
    "type": {
      "type": "string",
      "enum": ["DAO", "ENTERPRISE", "CONSENTIDA", "AID"],
      "description": "Type of subidentity to create"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Optional description of the subidentity"
    },
    "purpose": {
      "type": "string",
      "maxLength": 200,
      "description": "Purpose or use case for this subidentity"
    },
    "avatar": {
      "type": "string",
      "format": "uri",
      "description": "Avatar image URL or IPFS hash"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 50
      },
      "maxItems": 10,
      "description": "Tags for categorizing the subidentity"
    },
    "privacyLevel": {
      "type": "string",
      "enum": ["PUBLIC", "DAO_ONLY", "PRIVATE", "ANONYMOUS"],
      "description": "Privacy level for the subidentity"
    },
    "kycLevel": {
      "type": "string",
      "enum": ["BASIC", "ENHANCED", "INSTITUTIONAL"],
      "description": "Required KYC level for this subidentity"
    },
    "governanceConfig": {
      "type": "object",
      "properties": {
        "daoId": {
          "type": "string",
          "format": "uuid",
          "description": "DAO ID for governance (if applicable)"
        },
        "parentalConsent": {
          "type": "boolean",
          "description": "Whether parental consent is required"
        },
        "governanceRules": {
          "type": "object",
          "additionalProperties": true,
          "description": "Custom governance rules"
        }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional metadata for the subidentity"
    }
  },
  "additionalProperties": false
}