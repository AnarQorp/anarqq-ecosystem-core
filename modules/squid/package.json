{
  "name": "@anarq/squid",
  "version": "1.0.0",
  "description": "sQuid Identity & Subidentities Module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:integrated": "SQUID_MOCK_MODE=false npm start",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage --run",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker build -t squid .",
    "docker:run": "docker run -p 3001:3001 squid"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "uuid": "^9.0.0",
    "crypto": "^1.0.1",
    "redis": "^4.6.7",
    "mongodb": "^5.7.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/uuid": "^9.0.2",
    "@types/node": "^20.4.2",
    "typescript": "^5.1.6",
    "tsx": "^3.12.7",
    "vitest": "^0.33.0",
    "@vitest/coverage-v8": "^0.33.0",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12"
  },
  "files": [
    "dist/**/*",
    "contracts/**/*",
    "events/**/*"
  ]
}