# Qflow Production Environment Configuration
# This file contains production-specific environment variables

# Application Configuration
NODE_ENV=production
LOG_LEVEL=warn
QFLOW_PORT=8080
QFLOW_WEBSOCKET_PORT=9090
QFLOW_LIBP2P_PORT=4001

# Performance Configuration
QFLOW_MAX_CONCURRENT_FLOWS=500
QFLOW_VALIDATION_TIMEOUT=5000
QFLOW_VALIDATION_CACHE_TTL=3600
QFLOW_SANDBOX_MEMORY_LIMIT=128
QFLOW_SANDBOX_TIMEOUT=30000

# Feature Flags
QFLOW_ENABLE_METRICS=true
QFLOW_ENABLE_TRACING=true
QFLOW_ENABLE_DEBUG=false
QFLOW_ENABLE_PROFILING=false
QFLOW_PERFORMANCE_MONITORING=true

# Storage Configuration
QFLOW_DATA_DIR=/app/data
QFLOW_LOG_DIR=/app/logs

# External Services
IPFS_API_URL=http://qflow-ipfs:5001
REDIS_URL=redis://qflow-redis:6379

# Security Configuration
QFLOW_ENABLE_CORS=false
QFLOW_CORS_ORIGINS=https://qflow.example.com,https://api.qflow.example.com
QFLOW_RATE_LIMIT_WINDOW=900000
QFLOW_RATE_LIMIT_MAX=1000

# Monitoring Configuration
QFLOW_METRICS_INTERVAL=30000
QFLOW_HEALTH_CHECK_INTERVAL=10000
QFLOW_PERFORMANCE_SAMPLE_RATE=0.1

# Ecosystem Integration
QFLOW_ECOSYSTEM_TIMEOUT=10000
QFLOW_ECOSYSTEM_RETRY_ATTEMPTS=3
QFLOW_ECOSYSTEM_RETRY_DELAY=1000

# Secrets (these should be set via Kubernetes secrets)
# QFLOW_JWT_SECRET=
# QFLOW_ENCRYPTION_KEY=
# REDIS_PASSWORD=