# Qflow Staging Environment Configuration
# This file contains staging-specific environment variables

# Application Configuration
NODE_ENV=staging
LOG_LEVEL=info
QFLOW_PORT=8080
QFLOW_WEBSOCKET_PORT=9090
QFLOW_LIBP2P_PORT=4001

# Performance Configuration
QFLOW_MAX_CONCURRENT_FLOWS=100
QFLOW_VALIDATION_TIMEOUT=5000
QFLOW_VALIDATION_CACHE_TTL=1800
QFLOW_SANDBOX_MEMORY_LIMIT=128
QFLOW_SANDBOX_TIMEOUT=30000

# Feature Flags
QFLOW_ENABLE_METRICS=true
QFLOW_ENABLE_TRACING=true
QFLOW_ENABLE_DEBUG=true
QFLOW_ENABLE_PROFILING=true
QFLOW_PERFORMANCE_MONITORING=true

# Storage Configuration
QFLOW_DATA_DIR=/app/data
QFLOW_LOG_DIR=/app/logs

# External Services
IPFS_API_URL=http://ipfs:5001
REDIS_URL=redis://redis:6379

# Security Configuration
QFLOW_ENABLE_CORS=true
QFLOW_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
QFLOW_RATE_LIMIT_WINDOW=900000
QFLOW_RATE_LIMIT_MAX=500

# Monitoring Configuration
QFLOW_METRICS_INTERVAL=15000
QFLOW_HEALTH_CHECK_INTERVAL=5000
QFLOW_PERFORMANCE_SAMPLE_RATE=0.5

# Ecosystem Integration
QFLOW_ECOSYSTEM_TIMEOUT=15000
QFLOW_ECOSYSTEM_RETRY_ATTEMPTS=5
QFLOW_ECOSYSTEM_RETRY_DELAY=2000

# Development Features
QFLOW_ENABLE_API_DOCS=true
QFLOW_ENABLE_SWAGGER_UI=true
QFLOW_ENABLE_PLAYGROUND=true

# Secrets (these should be set via environment or .env file)
# QFLOW_JWT_SECRET=staging-jwt-secret
# QFLOW_ENCRYPTION_KEY=staging-encryption-key
# REDIS_PASSWORD=