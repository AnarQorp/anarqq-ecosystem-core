# Qflow Development Environment Configuration
# This file contains development-specific environment variables

# Application Configuration
NODE_ENV=development
LOG_LEVEL=debug
QFLOW_PORT=8080
QFLOW_WEBSOCKET_PORT=9090
QFLOW_LIBP2P_PORT=4001

# Performance Configuration
QFLOW_MAX_CONCURRENT_FLOWS=10
QFLOW_VALIDATION_TIMEOUT=10000
QFLOW_VALIDATION_CACHE_TTL=300
QFLOW_SANDBOX_MEMORY_LIMIT=64
QFLOW_SANDBOX_TIMEOUT=60000

# Feature Flags
QFLOW_ENABLE_METRICS=true
QFLOW_ENABLE_TRACING=true
QFLOW_ENABLE_DEBUG=true
QFLOW_ENABLE_PROFILING=true
QFLOW_PERFORMANCE_MONITORING=true

# Storage Configuration
QFLOW_DATA_DIR=./data
QFLOW_LOG_DIR=./logs

# External Services
IPFS_API_URL=http://localhost:5001
REDIS_URL=redis://localhost:6379

# Security Configuration
QFLOW_ENABLE_CORS=true
QFLOW_CORS_ORIGINS=*
QFLOW_RATE_LIMIT_WINDOW=900000
QFLOW_RATE_LIMIT_MAX=100

# Monitoring Configuration
QFLOW_METRICS_INTERVAL=5000
QFLOW_HEALTH_CHECK_INTERVAL=2000
QFLOW_PERFORMANCE_SAMPLE_RATE=1.0

# Ecosystem Integration
QFLOW_ECOSYSTEM_TIMEOUT=30000
QFLOW_ECOSYSTEM_RETRY_ATTEMPTS=10
QFLOW_ECOSYSTEM_RETRY_DELAY=5000

# Development Features
QFLOW_ENABLE_API_DOCS=true
QFLOW_ENABLE_SWAGGER_UI=true
QFLOW_ENABLE_PLAYGROUND=true
QFLOW_ENABLE_HOT_RELOAD=true
QFLOW_ENABLE_MOCK_SERVICES=true

# Secrets (for development only - use secure values in production)
QFLOW_JWT_SECRET=dev-jwt-secret-change-in-production
QFLOW_ENCRYPTION_KEY=dev-encryption-key-change-in-production
REDIS_PASSWORD=