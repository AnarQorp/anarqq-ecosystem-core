{
  "name": "@qflow/integration-tests",
  "version": "1.0.0",
  "description": "Comprehensive integration test suite for Qflow serverless automation engine",
  "main": "run-integration-tests.js",
  "bin": {
    "qflow-integration-tests": "./run-integration-tests.js"
  },
  "scripts": {
    "test": "node run-integration-tests.js run",
    "test:ecosystem": "node run-integration-tests.js ecosystem",
    "test:isolation": "node run-integration-tests.js isolation",
    "test:verbose": "node run-integration-tests.js run --verbose",
    "test:html": "node run-integration-tests.js run --format html",
    "test:xml": "node run-integration-tests.js run --format xml",
    "test:coverage": "node run-integration-tests.js run --coverage",
    "test:parallel": "node run-integration-tests.js run --parallel",
    "generate-config": "node run-integration-tests.js generate-config",
    "build": "tsc",
    "clean": "rm -rf dist test-reports",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "qflow",
    "integration-tests",
    "serverless",
    "automation",
    "testing",
    "ecosystem",
    "multi-tenant"
  ],
  "author": "Qflow Team",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qflow/qflow-serverless-automation.git",
    "directory": "modules/qflow/tests/integration"
  },
  "bugs": {
    "url": "https://github.com/qflow/qflow-serverless-automation/issues"
  },
  "homepage": "https://github.com/qflow/qflow-serverless-automation#readme"
}