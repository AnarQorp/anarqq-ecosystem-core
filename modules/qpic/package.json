{
  "name": "@anarq/qpic",
  "version": "2.0.0",
  "description": "Media Management module for Q ecosystem with transcoding, optimization, and marketplace integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "start:integrated": "NODE_ENV=production node dist/index.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest --run --config vitest.integration.config.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker build -t qpic .",
    "docker:run": "docker run -p 3008:3008 qpic"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/swagger": "^8.0.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@fastify/multipart": "^8.0.0",
    "fastify": "^4.24.0",
    "mongoose": "^8.0.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "zod": "^3.22.0",
    "uuid": "^9.0.0",
    "eventemitter3": "^5.0.1",
    "redis": "^4.6.0",
    "crypto": "^1.0.1",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "sharp": "^0.32.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "exifr": "^7.1.3",
    "music-metadata": "^8.1.0",
    "pdf-parse": "^1.1.1",
    "file-type": "^18.7.0",
    "axios": "^1.6.0",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.0",
    "@types/lodash": "^4.14.0",
    "@types/mime-types": "^2.1.0",
    "@types/fluent-ffmpeg": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0",
    "ts-node-dev": "^2.0.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.0",
    "mongodb-memory-server": "^9.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "openapi.yaml",
    "mcp.json"
  ]
}