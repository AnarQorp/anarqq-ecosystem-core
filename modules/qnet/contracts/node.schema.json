{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.anarq.io/qnet/node.json",
  "title": "Network Node",
  "description": "Schema for QNET network node definition",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^qnet-[a-z0-9-]+$",
      "description": "Unique node identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Human-readable node name"
    },
    "endpoint": {
      "type": "string",
      "format": "uri",
      "description": "Node endpoint URL"
    },
    "region": {
      "type": "string",
      "enum": [
        "us-east-1", "us-west-1", "us-west-2",
        "eu-west-1", "eu-central-1",
        "ap-southeast-1", "ap-northeast-1",
        "global", "dev"
      ],
      "description": "Geographic region"
    },
    "type": {
      "type": "string",
      "enum": ["primary", "secondary", "mesh", "edge"],
      "description": "Node type classification"
    },
    "tier": {
      "type": "string",
      "enum": ["standard", "premium"],
      "description": "Service tier level"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "degraded", "maintenance"],
      "description": "Current node status"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "routing", "storage", "compute", "gateway",
          "public", "dao-only", "private",
          "https", "ipfs", "libp2p"
        ]
      },
      "uniqueItems": true,
      "description": "Node capabilities and supported services"
    },
    "metrics": {
      "type": "object",
      "properties": {
        "latency": {
          "type": "number",
          "minimum": 0,
          "description": "Average latency in milliseconds"
        },
        "uptime": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Uptime percentage (0-1)"
        },
        "requestCount": {
          "type": "integer",
          "minimum": 0,
          "description": "Total request count"
        },
        "errorCount": {
          "type": "integer",
          "minimum": 0,
          "description": "Total error count"
        },
        "reputation": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Node reputation score (0-1)"
        },
        "bandwidth": {
          "type": "string",
          "pattern": "^\\d+(\\.\\d+)?(Kbps|Mbps|Gbps)$",
          "description": "Available bandwidth"
        }
      },
      "required": ["latency", "uptime", "requestCount", "errorCount", "reputation"],
      "additionalProperties": false
    },
    "lastSeen": {
      "type": "string",
      "format": "date-time",
      "description": "Last seen timestamp"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Node creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "required": [
    "id", "name", "endpoint", "region", "type", "tier", 
    "status", "capabilities", "metrics", "lastSeen"
  ],
  "additionalProperties": false
}