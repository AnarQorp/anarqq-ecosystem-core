{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.anarq.io/qnet/events/node-joined.json",
  "title": "Node Joined Event",
  "description": "Event published when a node joins the QNET network",
  "type": "object",
  "properties": {
    "eventType": {
      "type": "string",
      "const": "q.qnet.node.joined.v1"
    },
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp"
    },
    "nodeId": {
      "type": "string",
      "pattern": "^qnet-[a-z0-9-]+$",
      "description": "Node identifier that joined"
    },
    "nodeName": {
      "type": "string",
      "description": "Human-readable node name"
    },
    "endpoint": {
      "type": "string",
      "format": "uri",
      "description": "Node endpoint URL"
    },
    "region": {
      "type": "string",
      "enum": [
        "us-east-1", "us-west-1", "us-west-2",
        "eu-west-1", "eu-central-1",
        "ap-southeast-1", "ap-northeast-1",
        "global", "dev"
      ],
      "description": "Node region"
    },
    "type": {
      "type": "string",
      "enum": ["primary", "secondary", "mesh", "edge"],
      "description": "Node type"
    },
    "tier": {
      "type": "string",
      "enum": ["standard", "premium"],
      "description": "Service tier"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "description": "Node capabilities"
    },
    "initialMetrics": {
      "type": "object",
      "properties": {
        "latency": {
          "type": "number",
          "minimum": 0
        },
        "uptime": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "description": "Initial node metrics"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional node metadata"
    }
  },
  "required": [
    "eventType", "eventId", "timestamp", "nodeId", 
    "region", "type", "tier", "capabilities"
  ],
  "additionalProperties": false
}