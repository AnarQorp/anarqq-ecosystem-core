{
  "name": "@anarq/qchat",
  "version": "1.0.0",
  "description": "Qchat - Instant Messaging Module for AnarQ&Q Ecosystem",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/server.mjs",
    "start": "node src/server.mjs",
    "start:integrated": "QCHAT_MODE=integrated node src/server.mjs",
    "start:hybrid": "QCHAT_MODE=hybrid node src/server.mjs",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.{js,mjs,ts}",
    "lint:fix": "eslint src/**/*.{js,mjs,ts} --fix",
    "docker:build": "docker build -t qchat .",
    "docker:run": "docker run -p 3001:3001 qchat"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "ws": "^8.14.2",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "qchat",
    "instant-messaging",
    "real-time",
    "encryption",
    "group-chat",
    "anarq",
    "ecosystem"
  ],
  "author": "AnarQ&Q Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anarq/qchat.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}