{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.anarq.org/qerberos/risk-score.json",
  "title": "Risk Score",
  "description": "Schema for risk scoring in the Qerberos security module",
  "type": "object",
  "properties": {
    "identity": {
      "type": "string",
      "description": "Identity identifier being assessed",
      "minLength": 1,
      "maxLength": 100
    },
    "score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Risk score (0 = low risk, 1 = high risk)"
    },
    "level": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Risk level classification"
    },
    "factors": {
      "type": "array",
      "description": "Risk factors and their contributions",
      "items": {
        "$ref": "#/definitions/RiskFactor"
      },
      "minItems": 0,
      "maxItems": 50
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Assessment timestamp in ISO 8601 format"
    },
    "expiresAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the risk score expires"
    },
    "operation": {
      "type": "string",
      "description": "Operation being assessed (optional)",
      "maxLength": 100
    },
    "context": {
      "type": "object",
      "description": "Additional context for risk assessment",
      "additionalProperties": true
    },
    "modelVersion": {
      "type": "string",
      "description": "Version of the risk scoring model used",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    }
  },
  "required": ["identity", "score", "level", "factors", "timestamp", "expiresAt"],
  "additionalProperties": false,
  "definitions": {
    "RiskFactor": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Risk factor name",
          "minLength": 1,
          "maxLength": 100
        },
        "weight": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Weight of this factor in the overall score"
        },
        "value": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Normalized value of this factor"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the factor",
          "maxLength": 500
        }
      },
      "required": ["name", "weight", "value"],
      "additionalProperties": false
    }
  },
  "examples": [
    {
      "identity": "did:squid:user123",
      "score": 0.35,
      "level": "medium",
      "factors": [
        {
          "name": "login_frequency",
          "weight": 0.2,
          "value": 0.8,
          "description": "High login frequency indicates normal behavior"
        },
        {
          "name": "failed_attempts",
          "weight": 0.3,
          "value": 0.1,
          "description": "Low number of failed authentication attempts"
        },
        {
          "name": "geo_location",
          "weight": 0.25,
          "value": 0.3,
          "description": "Login from unusual geographic location"
        },
        {
          "name": "device_trust",
          "weight": 0.25,
          "value": 0.9,
          "description": "Login from trusted device"
        }
      ],
      "timestamp": "2024-02-08T15:30:00.000Z",
      "expiresAt": "2024-02-08T16:30:00.000Z",
      "operation": "file_access",
      "context": {
        "userAgent": "Mozilla/5.0...",
        "ipAddress": "192.168.1.100",
        "sessionId": "sess_123456"
      },
      "modelVersion": "1.2.3"
    }
  ]
}